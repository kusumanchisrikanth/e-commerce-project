<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Deal UP | Home Page</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
    <!--  navbar start -->
    <nav class="navbar navbar-expand-lg navbar-light bg-warning fixed-top">
            <a class="navbar-brand" href="/">
              <img src="./images/logo1.png" height="50px" alt="">
            </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="form-inline my-2 my-lg-0 mx-auto search-bar" action="/search" method="POST" >
                <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-success my-2 my-sm-0" type="submit" value="search">Search</button>
              </form>
          <ul class="navbar-nav custom-navbar">
            <li class="nav-item active bg-success rounded-pill px-3 m-1 text-center">
              <a class="nav-link text-white" href="/"><i class="fa fa-home"></i> Home</a>
            </li>
            <% if(!isloggedin) { %>
            <li class="nav-item rounded-pill bg-success px-3 m-1 text-center">
              <a class="nav-link text-white" href="/signup"><i class="fa fa-sign-in"></i> Login/Signup</a>
            </li>
            <% } else{ %>
            <li class="nav-item rounded-pill bg-success px-3 m-1 text-center">
              <a class="nav-link text-white" href="/add"><i class="fa fa-camera"></i> Post a free add</a>
            </li>
            <li class="nav-item rounded-pill bg-success px-3 m-1 text-center">
              <a class="nav-link text-white" href="/profile"><i class="fa fa-user"></i> Profile</a>
            </li>
            <% } %>
          </ul>
        </div>
      </nav>
      
    <!--  navbar end -->
    <!--  categories start -->
        
    <span class="icon">
        <i class="fas fa-bars mt-5 ml-lg-5 ml-2 fa-2x"></i>
    </span>
    <ul class="list-group categories mt-5 position-fixed">
        <li class="list-group-item mt-5"> <a href="./1"> Electronics
          <span> &#10095; </span> </a> 
        </li>
        <li class="list-group-item"> <a href="./2">
          Mobiles<span> &#10095; </span>
        </a>       
      </li>
        <li class="list-group-item">
          <a href="./3">
            Home Appliances
            <span> &#10095; </span>
          </a>
        </li>
        <li class="list-group-item ">
          <a href="./4">
            Vehicles
            <span> &#10095; </span>
          </a>
        </li>
        <li class="list-group-item ">
          <a href="./5">
            Books,Sports
            <span> &#10095; </span>
          </a>
        </li>
        <li class="list-group-item">
          <a href="./6">
            Engineering Stationery
            <span> &#10095; </span>
          </a>
        </li>
        <li class="list-group-item ">
          <a href="./7">
            Accessories
            <span> &#10095; </span>
          </a>
        </li>
        <li class="list-group-item">
          <a href="./8">
            Others
            <span> &#10095; </span>
          </a>
        </li>
      </ul>

    <!--  categories end -->
    <!-- Carousel start -->
    <div class="container">
      <h1 class="mt-5 pt-5  ml-3 h1 text-center">Find all these items  here</h1>
      <div id="carouselExampleIndicators" class="carousel slide mt-5" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="./images/carousel/1.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="./images/carousel/2.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="./images/carousel/3.jpg" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <!-- Carousel end -->

    <!-- items start -->
    <div class="container">
      <div class="row">
        <% for(var i=0 ; i < docs.length ; i++) { %>
        <div class="col-lg-4 col-md-6 col-sm-12 p-5">
          <div class="card shadow-lg">
            <img src="./uploads/<%= docs[i].photo %>" width="100%" height="200px" style="object-fit: cover;" class="card-img-top" alt="...">
            <div class="card-body">
              <h2 class="card-title"><%= docs[i].name %></h2>
              <p class="lead">Price: <%= docs[i].price %>/-</p>
          <a href="./product/<%= docs[i]._id %>" class="btn btn-success" > View product </a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <!-- items end -->
    <footer class="footer mb-5">
      <div class="container">
        <div class="text-muted text-center">copy right reserved @ 2020</div>
      </div>
    </footer>
</body>
<script src="./js/jquery.min.js"></script>
<script src="./js/bootstrap.min.js"></script>
<script src="./js/font.js"></script>
<script src="./js/script.js"></script>
</html>